<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".customer.CustomerViewCarActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_car_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:src="@drawable/ic_directions_car_black_24dp" />

        <TextView
            android:id="@+id/text_view_car_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_car_image"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:text="Car Model"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_car_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_car_model"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:text="Car Brand"
            android:textSize="20sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="1dp"
            android:layout_below="@id/text_view_car_brand"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/label_car_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_margin="8dp"
            android:text="@string/color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_view_car_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:text="Color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/label_car_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_car_color"
            android:layout_margin="8dp"
            android:text="@string/capacity"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_view_car_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_car_color"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:text="Capacity"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/label_price_per_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_car_capacity"
            android:layout_margin="8dp"
            android:text="@string/price_per_hour"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_view_price_per_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_car_capacity"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:text="Price per hour"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/label_price_per_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_price_per_hour"
            android:layout_margin="8dp"
            android:text="@string/price_per_day"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_view_price_per_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_price_per_hour"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:text="Price per Day"
            android:textSize="18sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_reserve_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_price_per_day"
            android:layout_margin="8dp"
            android:text="@string/reserve_car" />
    </RelativeLayout>

</ScrollView>